{
  "name": "platzi-test",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"src/**/*.js\"",
    "prettier-lint": "node_modules/.bin/prettier -l --write \"src/**/*.js\"",
    "publish": "vercel --prod",
    "test": "yarn build && jest --config ./jest.config.js",
    "cypress:open": "cypress open --project ./src/__e2e-test__",
    "test:e2e": "yarn build && run-p --race start cypress:open"
  },
  "repository": "git@github.com:santiagoep/platzi-test.git",
  "author": "santiagoep <santiagoemp01@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.9.7",
    "graphql": "^15.4.0",
    "graphql-request": "^3.4.0",
    "lodash.debounce": "^4.0.8",
    "next": "^10.0.3",
    "next-redux-wrapper": "^6.0.2",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-slick": "^0.27.13",
    "redux": "^4.0.5",
    "redux-mock-store": "^1.5.4",
    "redux-persist": "^6.0.0",
    "reduxsauce": "^1.2.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "@zeit/next-source-maps": "^0.0.3",
    "babel-eslint": "^10.1.0",
    "babel-plugin-styled-components": "^1.12.0",
    "cypress": "^6.2.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "next-fonts": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pushstate-server": "^3.1.0",
    "react-test-renderer": "^17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js, jsx}": [
      "yarn prettier-lint --write",
      "yarn lint",
      "git add ."
    ]
  },
  "collectCoverageFrom": [
    "src/**/*.js",
    "!<rootDir>/src/config/lib/*",
    "!<rootDir>/src/config/boot-loaders/*",
    "!<rootDir>/src/__test__/utils/*"
  ]
}
